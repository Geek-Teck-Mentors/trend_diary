{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": [
      "@cloudflare/workers-types/2023-07-01",
      "vite/client",
      "vitest/globals",
      "@react-router/node"
    ],
    "rootDirs": [".", "./.react-router/types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [".react-router/types/**/*", "src"],
  "exclude": ["supabase"]
}
