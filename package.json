{
  "name": "my-app",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "test": "vitest run",
    "test:frontend:coverage": "vitest run -c vitest.config.frontend.ts --coverage",
    "test:backend:coverage": "vitest run -c vitest.config.backend.ts --coverage",
    "check-types": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "db:gen": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev --skip-seed",
    "db:migrate:sql-only": "npx prisma migrate dev --skip-seed --skip-generate",
    "db:reset": "npx prisma migrate reset --skip-seed",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@prisma/extension-accelerate": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@remix-run/cloudflare": "^2.8.1",
    "@remix-run/cloudflare-pages": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@tailwindcss/vite": "^4.0.8",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.6.18",
    "lucide-react": "^0.487.0",
    "pino": "^9.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.1",
    "@prisma/generator-helper": "^6.5.0",
    "@remix-run/dev": "^2.8.1",
    "@types/bcrypt": "^5.0.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.5.0",
    "prisma-erd-generator": "^2.0.4",
    "remix-hono": "^0.0.16",
    "tailwindcss": "^4.0.8",
    "typescript": "^5.7.3",
    "vite": "^5.4.12",
    "vitest": "^3.0.4",
    "wrangler": "^3.96.0"
  }
}
