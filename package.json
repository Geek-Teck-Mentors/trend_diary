{
  "name": "my-app",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "test:frontend": "vitest run -c vitest/config.frontend.ts",
    "test:service": "vitest run -c vitest/config.service.ts",
    "test:api": "vitest run -c vitest/config.api.ts",
    "e2e": "npx playwright test",
    "e2e:report": "npx playwright show-report",
    "e2e:gen": "npx playwright codegen",
    "check-types": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:ci": "npm run lint && npm run format && npm run check-types",
    "db:gen": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev --skip-seed",
    "db:migrate:sql-only": "npx prisma migrate dev --skip-seed --skip-generate",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --skip-seed",
    "db:studio": "npx prisma studio",
    "supabase:db:type-gen": "npx supabase gen types typescript --local > supabase/functions/infrastructure/database.types.ts"
  },
  "prisma": {
    "schema": "./prisma"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "@prisma/client": "^6.7.0",
    "@prisma/extension-accelerate": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@remix-run/cloudflare": "^2.16.5",
    "@remix-run/cloudflare-pages": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "@tailwindcss/vite": "^4.0.8",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.6.18",
    "hono-remix-adapter": "^0.5.4",
    "lucide-react": "^0.487.0",
    "next-themes": "^0.4.6",
    "pino": "^9.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rss-parser": "^3.13.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@faker-js/faker": "^9.7.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.1",
    "@playwright/test": "^1.52.0",
    "@prisma/generator-helper": "^6.5.0",
    "@remix-run/dev": "^2.16.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.15.30",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.7.0",
    "prisma-erd-generator": "^2.0.4",
    "remix-hono": "^0.0.16",
    "tailwindcss": "^4.0.8",
    "typescript": "^5.7.3",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^3.114.7"
  },
  "overrides": {
    "esbuild": "0.17.19",
    "estree-util-value-to-estree": "3.3.3"
  }
}
