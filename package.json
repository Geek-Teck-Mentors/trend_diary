    "tsx": "^4.20.4",
    "typescript": "^5.7.3",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^4.27.0"
  }
}
